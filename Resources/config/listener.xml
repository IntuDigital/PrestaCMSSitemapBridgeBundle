<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sandbox.listener.sitemap.class">Sandbox\SitemapBundle\EventListener\PrestaSitemapListener</parameter>
    </parameters>

    <services>
        <service id="sandbox.listener.sitemap" class="%sandbox.listener.sitemap.class%">
            <argument type="service" id="presta_cms.manager.website" />
            <argument type="service" id="presta_cms.manager.route" />
            <argument type="service" id="router" />
            <tag name="presta.sitemap.listener" />
        </service>
    </services>
</container>
